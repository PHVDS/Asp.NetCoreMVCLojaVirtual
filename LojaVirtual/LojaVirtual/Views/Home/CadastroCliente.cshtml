@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LojaVirtual.Models.Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}

<main role="main">

    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6">
                <h3 class="subtitle-doc">
                    Cadastro cliente                
                </h3>
                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                            <h4 class="card-title mt-2">Cadastre-se</h4>
                        </header>
                        <article class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
                                    </div>
                                    <div class="col form-group">
                                        <label>Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option1">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option2">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label>CPF</label>
                                    <input type="text" asp-for="CPF" class="form-control" placeholder="Digite seu CPF">                           
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu email">
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input asp-for="Senha" class="form-control" type="password">
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>
                            </form>
                        </article>
                        <div class="border-top card-body text-center">Ja tem uma conta? <a asp-controller="Home" asp-action="Login">Entre</a></div>
                    </div> 
                </div> 
            </aside>
        </div>
    </section>
</main>


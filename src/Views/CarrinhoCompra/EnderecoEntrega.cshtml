@{
    ViewData["Title"] = "EnderecoEntrega";
}

<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-md-12">
            <!--Listar endereços-->

            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th scope="row">
                            <input type="radio" name="endereco" value="0" id="0-end" />
                        </th>
                        <td>
                            <label for="0-end">
                                <strong>Nome: </strong> Endereço do cliente.
                                <p>
                                    @ViewBag.Cliente.CEP | @ViewBag.Cliente.Cidade, @ViewBag.Cliente.Estado
                                    <br />
                                    @ViewBag.Cliente.Endereco, @ViewBag.Cliente.Numero, @ViewBag.Cliente.Bairro,  @ViewBag.Cliente.Complemento
                                </p>
                            </label>
                        </td>
                    </tr>

                    @foreach (EnderecoEntrega endereco in ViewBag.Enderecos)
                    {
                        <tr>
                            <th scope="row">
                                <input type="radio" name="endereco" value="@endereco.Id" id="@endereco.Id-end" />
                            </th>
                            <td>
                                <label for="@endereco.Id-end">
                                    <strong>Nome: </strong> @endereco.Nome
                                    <p>
                                        @endereco.CEP | @endereco.Cidade, @endereco.Estado
                                        <br />
                                        @endereco.Endereco, @endereco.Numero, @endereco.Bairro, @endereco.Complemento
                                    </p>
                                </label>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <div class="text-center">
                <a asp-action="CadastroEnderecoEntrega" asp-controller="Home" asp-area="Cliente"
                   class="btn btn-outline-primary" asp-route-returnUrl="@Url.Action("EnderecoEntrega", "CarrinhoCompra", new { area ="" })">
                    Cadastrar novo endereço
                </a>
            </div>

            <br />
            <div class="card-group">
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title fas fa-box-open"> PAC</h5>
                        <p class="card-text">Dias.</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            <input type="radio" name="frete" value="PAC" />
                        </small>
                    </div>
                </div>
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title fas fa-truck"> SEDEX</h5>
                        <p class="card-text">Dias.</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            <input type="radio" name="frete" value="SEDEX" />
                        </small>
                    </div>
                </div>
                <div class="card">

                    <div class="card-body">
                        <h5 class="card-title fas fa-shipping-fast"> SEDEX10</h5>
                        <p class="card-text">Dias.</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            <input type="radio" name="frete" value="SEDEX10" />
                        </small>
                    </div>
                </div>
            </div>
            <br />

            <a asp-action="Index" asp-controller="Pagamento" class="form-control btn btn-primary">Continuar</a>
        </div>
        
    </div>
</div>


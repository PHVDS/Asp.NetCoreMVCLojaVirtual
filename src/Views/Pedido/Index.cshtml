@model Pedido
@{
    ViewData["Title"] = "Index";
    decimal valorTotal = 0;
}
<br />
<br />
<div class="container">
    <div class="form-row">
        <div class="col-md-12 text-center">
            <h1>Pedido n° @Model.Id-@Model.TransactionId</h1>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                
                @foreach (ProdutoItem produtoItem in ViewBag.Produtos)
                {
                    valorTotal += (produtoItem.QuantidadeProdutoCarrinho * produtoItem.Valor);
                    <tr>
                        <td>@produtoItem.Nome</td>
                        <td>@produtoItem.QuantidadeProdutoCarrinho</td>
                        <td>
                            @((produtoItem.QuantidadeProdutoCarrinho * produtoItem.Valor).ToString("C"))
                            (@produtoItem.Valor.ToString("C") unid)
                        </td>
                    </tr>
                }

                <tr>
                    <td colspan="2">Frete</td>
                    <td>
                        @{ 
                            var frete = Mascara.ConverterPagarMeIntToDecimal(ViewBag.Transacao.Shipping.Fee);
                            valorTotal += frete;
                        }
                        @frete.ToString("C")
                    </td>
                </tr>

                <tr>
                    <td colspan="2">TOTAL</td>
                    <td>@valorTotal.ToString("C")</td>
                </tr>
            </table>

            @if (Model.FormaPagamento == MetodoPagamentoConstant.Boleto)
            {
                <h3>Boleto</h3>
                <iframe src="@ViewBag.Transacao.BoletoUrl" style="width: 100%; min-height: 400px; border: 1px solid #CCC;"></iframe>
                <a target="_blank" href="@ViewBag.Transacao.BoletoUrl" class="btn btn-outline-secondary">Imprimir</a>
            }
            <br />
            <br />
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-lg"> Voltar a comprar</a>
        </div>
    </div>
</div>

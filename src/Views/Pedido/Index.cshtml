@model Pedido
@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="container">
    <div class="form-row">
        <div class="col-md-12 text-center">
            <h1>Pedido n° @Model.Id-@Model.TransactionId</h1>

            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                
                @foreach (ProdutoItem produtoItem in ViewBag.Produtos)
                {
                    <tr>
                        <td>@produtoItem.Nome</td>
                        <td>@produtoItem.QuantidadeProdutoCarrinho</td>
                        <td>
                            @((produtoItem.QuantidadeProdutoCarrinho * produtoItem.Valor).ToString("C"))
                            (@produtoItem.Valor.ToString("C") unid)
                        </td>
                    </tr>
                }

                <tr>
                    <td colspan="2">Frete</td>
                    <td>Valor</td>
                </tr>

                <tr>
                    <td colspan="2">TOTAL</td>
                    <td>R$ 1000.00</td>
                </tr>
            </table>

            @if (Model.FormaPagamento == MetodoPagamentoConstant.Boleto)
            {
                <h3>Boleto</h3>
            }

            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary btn-lg"> Voltar a comprar</a>
        </div>
    </div>
</div>

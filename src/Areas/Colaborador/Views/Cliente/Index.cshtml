@model X.PagedList.PagedList<LojaVirtual.Models.Cliente>
@{
    ViewData["Title"] = "Index";
    var pesquisa = Context.Request.Query["pesquisa"];
}

<h1>Cliente</h1>

<!--Formulario-->
<form method="get">
    <div class="form-group">
        <label for="pesquisa"></label>
        <input type="text" name="pesquisa" value="@pesquisa" id="pesquisa" class="form-control" placeholder="Digite o nome ou e-mail do cliente">
    </div>
    <button type="submit" class="btn btn-info">Pesquisar</button>
</form>

@{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }

@if (Model.Count > 0)
{
    <div class="table-responsive">
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Id)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Nome)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.First().Email)</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Cliente cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Id</th>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                        <td>
                            @if (cliente.Situacao == "A")
                            {
                                <a asp-action="AtivarDesativar" asp-route-id="@cliente.Id" class="btn btn-outline-danger">Desativar</a>
                            }
                            else
                            {
                                <a asp-action="AtivarDesativar" asp-route-id="@cliente.Id" class="btn btn-outline-primary">Ativar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @Html.PagedListPager((IPagedList)Model, pagina => Url.Action("Index", new { pagina = pagina, pesquisa = pesquisa }))
}
else
{
    <span>Nenhum registro cadastrado!</span>
}
@model Cliente
@{
    ViewData["Title"] = "CadastroCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Cadastro cliente
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                                <h4 class="card-title mt-2">Cadastre-se</h4>
                            </header>
                            <article class="card-body">
                                @if (TempData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@TempData["MSG_S"]</p>
                                }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
                                        <span asp-validation-for="Nome"> </span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Nascimento">Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control" placeholder="Digite seu nascimento">
                                        <span asp-validation-for="Nascimento"> </span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span asp-validation-for="Sexo"> </span>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                </div>

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input type="text" asp-for="CPF" class="cpf form-control" placeholder="Digite seu CPF">
                                        <span asp-validation-for="CPF"> </span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="tel form-control" placeholder="Digite seu telefone">
                                        <span asp-validation-for="Telefone"> </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu email">
                                    <span asp-validation-for="Email"> </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CEP">CEP</label>
                                    <input type="text" asp-for="CEP" class="cep form-control" placeholder="Digite seu CEP">
                                    <span asp-validation-for="CEP"> </span>
                                    <br />
                                    <div class="alert alert-danger" style="display:none"></div>
                                </div>

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Estado">Estado</label>
                                        <input type="text" asp-for="Estado" readonly="readonly" class="form-control">
                                        <span asp-validation-for="Estado"> </span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Cidade">Cidade</label>
                                        <input type="text" asp-for="Cidade" readonly="readonly" class="form-control">
                                        <span asp-validation-for="Cidade"> </span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Endereco">Endereço</label>
                                        <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço">
                                        <span asp-validation-for="Endereco"> </span>
                                    </div>

                                    <div class="col form-group">
                                        <label asp-for="Bairro">Bairro</label>
                                        <input type="text" asp-for="Bairro" class="form-control" placeholder="Digite o bairro">
                                        <span asp-validation-for="Bairro"> </span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Complemento">Complemento</label>
                                        <input type="text" asp-for="Complemento" style="width:400px;" class="form-control" placeholder="Digite o complemento">
                                        <span asp-validation-for="Complemento"> </span>
                                    </div>

                                    <div class="col form-group">
                                        <label asp-for="Numero">N°</label>
                                        <input type="text" asp-for="Numero" class="form-control" placeholder="Número">
                                        <span asp-validation-for="Numero"> </span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Senha">Senha</label>
                                    <input asp-for="Senha" class="form-control" type="password" placeholder="Digite sua senha">
                                    <span asp-validation-for="Senha"> </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmacaoSenha"></label>
                                    <input asp-for="ConfirmacaoSenha" class="form-control" type="password" placeholder="Confirme sua senha">
                                    <span asp-validation-for="ConfirmacaoSenha"> </span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Cadastrar </button>
                                </div>
                            </article>
                            <div class="border-top card-body text-center">Ja tem uma conta? <a asp-controller="Home" asp-action="Login">Entre</a></div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>

@model Cliente
@{
    ViewData["Title"] = "Atualizar senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Atualizar senha
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">Atualizar</h4>
                            </header>
                            <article class="card-body">

                                @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }

                                <div class="form-group">
                                    <label asp-for="Senha">Senha</label>
                                    <input asp-for="Senha" class="form-control" type="password" placeholder="Alterar senha">
                                    <span asp-validation-for="Senha"> </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmacaoSenha"></label>
                                    <input asp-for="ConfirmacaoSenha" class="form-control" type="password" placeholder="Confirme sua senha">
                                    <span asp-validation-for="ConfirmacaoSenha"> </span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Salvar </button>
                                </div>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
